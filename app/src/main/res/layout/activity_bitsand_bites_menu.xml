<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BitsandBitesMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/adlam_display"
        android:gravity="center"
        android:text="MENU"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#2196F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buono"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/dosa"
            android:fontFamily="@font/actor"
            android:text="Dosa's"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/curries"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/paneer"
            android:fontFamily="@font/actor"
            android:text="Curries"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/roti"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/roti"
            android:fontFamily="@font/actor"
            android:text="Roti's"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/soup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/soup"
            android:fontFamily="@font/actor"
            android:text="Soup's"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/idli"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/food"
            android:fontFamily="@font/actor"
            android:text="Idli"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/friedrice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/friedrice"
            android:fontFamily="@font/actor"
            android:text="Fried Rice"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/noodles"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/ramen"
            android:fontFamily="@font/actor"
            android:text="Noodles"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tandoori"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/drumstick"
            android:fontFamily="@font/actor"
            android:text="Tandoori"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/starters"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_foodstore"
            android:drawableRight="@drawable/canape"
            android:fontFamily="@font/actor"
            android:text="Starters"
            android:textSize="25sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/food"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/foodd"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>